{{#if (gt this.errors.length 0)}}
  <div class="errors">
    {{#each this.errors as |error|}}
      <div class="error">
        {{error}}
      </div>
    {{/each}}
  </div>
{{/if}}
<div class="row-happy">
  <SmileyFaceHappy />
  <div class="input-happy">
    <label>
      When things were good:<br />
    </label>
    <Input
      class="numerical-input"
      placeholder="e.g. 0"
      @value={{this.happyValueString}}
    />
  </div>
</div>
<div class="row-sad">
  <SmileyFaceSad />
  <div class="input-sad">
    <label>
      When things were bad:<br />
    </label>
    <Input
      placeholder="e.g. 10"
      class="numerical-input"
      @value={{this.sadValueString}}
    />
  </div>
</div>
<button
  type="button"
  class="pure-button"
  {{on "click" this.onBeginClick}}
>Begin</button>
