{{#if (eq smile "smile-happy")}}
  <img
    src="emoticon-happy-outline.png"
    class="smiley-face"
  />
{{else if (eq smile "smile-sad")}}
  <img
    src="emoticon-sad-outline.png"
    class="smiley-face"
  />
{{else if (eq smile "smile-choice")}}
  <img
    src="emoticon-sad-outline.png"
    class="smiley-face choice-left {{leftChoiceOpacity}} {{leftChoicePosition}}"
    {{on "click" (fn this.smileyFaceClicked "sad")}}
  />
  <img
    src="emoticon-happy-outline.png"
    class="smiley-face choice-right {{rightChoiceOpacity}} {{rightChoicePosition}}"
    {{on "click" (fn this.smileyFaceClicked "happy")}}
  />
{{/if}}
<Input
  class="numerical-input"
  @value="20"
/>
