{{#if (eq smile "state-happy")}}
  <img
    src="emoticon-happy-outline.png"
    class="smiley-face"
  />
{{else if (eq smile "state-sad")}}
  <img
    src="emoticon-sad-outline.png"
    class="smiley-face"
  />
{{else if (eq smile "state-choice")}}
  <img
    src="emoticon-sad-outline.png"
    class="smiley-face choice-left"
    {{on "click" (fn this.smileyFaceClicked "sad")}}
  />
  <img
    src="emoticon-happy-outline.png"
    class="smiley-face choice-right"
    {{on "click" (fn this.smileyFaceClicked "happy")}}
  />
{{/if}}
<Input
  class="numerical-input"
  @value="20"
/>
